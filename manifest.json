{
  "manifest_version": 3,
  "name": "Autopab",
  "description": "Autopab",
  "version": "2.0",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "content.js"
      ],
      "matches": [
        "https://*.lego.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://*.lego.com/*"
  ],
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "scripting"
  ]
}
